<component name="org.nuxeo.ecm.platform.ui.web.login">
  <extension
    target="org.nuxeo.ecm.platform.ui.web.auth.service.PluggableAuthenticationService"
    point="loginScreen">
    <loginScreenConfig>
      <defaultLocale>en</defaultLocale>
      <supportedLocales>
        <locale>en_GB</locale>
        <locale>en_US</locale>
      </supportedLocales>
      <removeNews>true</removeNews>
      <logoWidth>113</logoWidth>
      <logoHeight>20</logoHeight>
    </loginScreenConfig>
  </extension>
</component>
